<AnchorPane prefHeight="520.0" prefWidth="1150.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AppointmentHomepage">
     <Text layoutX="513.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Appointments" textAlignment="CENTER">
         <font>
